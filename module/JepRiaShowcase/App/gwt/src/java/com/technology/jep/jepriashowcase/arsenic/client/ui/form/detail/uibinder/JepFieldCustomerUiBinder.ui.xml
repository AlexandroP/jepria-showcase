<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:DeckPanel>
        <g:FlowPanel ui:field="viewPanel">
            <g:HTML addStyleNames="jepRia-FontStyle" ui:field="viewCardLabel"></g:HTML>
            <g:HTML addStyleNames="jepRia-FontStyle" ui:field="viewCard"></g:HTML>
        </g:FlowPanel>  
        <g:FlowPanel ui:field="editablePanel" >
            <g:HTML addStyleNames="jepRia-FontStyle" ui:field="editableCardLabel"></g:HTML>
            <!-- Editable card will be HERE! -->
        </g:FlowPanel>  
        
        <g:VerticalPanel ui:field="viewPanel2">
            <g:HTML addStyleNames="jepRia-FontStyle" ui:field="viewCardLabelCustomer"></g:HTML>
        </g:VerticalPanel>  
        <g:VerticalPanel ui:field="editablePanel2" >
            <g:HTML addStyleNames="jepRia-FontStyle" ui:field="editableCardLabelCustomer"></g:HTML>
            <!-- Editable card will be HERE! -->
        </g:VerticalPanel>
    </g:DeckPanel>
</ui:UiBinder>