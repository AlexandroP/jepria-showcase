<?xml version = '1.0' encoding = 'UTF-8'?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5" >
  <servlet>
    <servlet-name>remoteLoggerServiceImpl</servlet-name>
    <servlet-class>com.allen_sauer.gwt.log.server.RemoteLoggerServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>remoteLoggerServiceImpl</servlet-name>
    <url-pattern>/JepRiaShowcase/gwt-log</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>MainServiceServlet</servlet-name>
    <servlet-class>com.technology.jep.jepria.server.service.JepMainServiceServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainServiceServlet</servlet-name>
    <url-pattern>/JepRiaShowcase/MainService</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CustomServlet</servlet-name>
    <servlet-class>com.technology.jep.jepriashowcase.custom.server.service.CustomServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CustomServlet</servlet-name>
    <url-pattern>/JepRiaShowcase/CustomService</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SearchServlet</servlet-name>
    <servlet-class>com.technology.jep.jepriashowcase.search.server.service.SearchServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SearchServlet</servlet-name>
    <url-pattern>/JepRiaShowcase/SearchService</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SupplierServlet</servlet-name>
    <servlet-class>com.technology.jep.jepriashowcase.supplier.server.service.SupplierServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SupplierServlet</servlet-name>
    <url-pattern>/JepRiaShowcase/ProtectedServices/SupplierService</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>GoodsServlet</servlet-name>
    <servlet-class>com.technology.jep.jepriashowcase.goods.server.service.GoodsServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GoodsServlet</servlet-name>
    <url-pattern>/JepRiaShowcase/ProtectedServices/GoodsService</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>uploadServlet</servlet-name>
    <servlet-class>com.technology.jep.jepriashowcase.goods.server.service.UploadServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>uploadServlet</servlet-name>
    <url-pattern>/JepRiaShowcase/upload</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>downloadServlet</servlet-name>
    <servlet-class>com.technology.jep.jepriashowcase.goods.server.service.DownloadServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>downloadServlet</servlet-name>
    <url-pattern>/JepRiaShowcase/download</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ArsenicServlet</servlet-name>
    <servlet-class>com.technology.jep.jepriashowcase.arsenic.server.service.ArsenicServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ArsenicServlet</servlet-name>
    <url-pattern>/JepRiaShowcase/ProtectedServices/ArsenicService</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ShopGoodsServlet</servlet-name>
    <servlet-class>com.technology.jep.jepriashowcase.shopgoods.server.service.ShopGoodsServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShopGoodsServlet</servlet-name>
    <url-pattern>/JepRiaShowcase/ProtectedServices/ShopGoodsService</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AllShopGoodsServlet</servlet-name>
    <servlet-class>com.technology.jep.jepriashowcase.allshopgoods.server.service.AllShopGoodsServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AllShopGoodsServlet</servlet-name>
    <url-pattern>/JepRiaShowcase/ProtectedServices/AllShopGoodsService</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RequestServlet</servlet-name>
    <servlet-class>com.technology.jep.jepriashowcase.request.server.service.RequestServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RequestServlet</servlet-name>
    <url-pattern>/JepRiaShowcase/ProtectedServices/RequestService</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>FeatureServletJson</servlet-name>
    <servlet-class>com.technology.jep.jepriashowcase.feature.server.service.FeatureServiceJsonImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FeatureServletJson</servlet-name>
    <url-pattern>/JepRiaShowcase/ProtectedServices/FeatureServiceJson/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>FeatureServlet</servlet-name>
    <servlet-class>com.technology.jep.jepriashowcase.feature.server.service.FeatureServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FeatureServlet</servlet-name>
    <url-pattern>/JepRiaShowcase/ProtectedServices/FeatureService</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>FeatureOperatorServlet</servlet-name>
    <servlet-class>com.technology.jep.jepriashowcase.featureoperator.server.service.FeatureOperatorServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FeatureOperatorServlet</servlet-name>
    <url-pattern>/JepRiaShowcase/ProtectedServices/FeatureOperatorService</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>FeatureProcessServlet</servlet-name>
    <servlet-class>com.technology.jep.jepriashowcase.featureprocess.server.service.FeatureProcessServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FeatureProcessServlet</servlet-name>
    <url-pattern>/JepRiaShowcase/ProtectedServices/FeatureProcessService</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RequestProcessServlet</servlet-name>
    <servlet-class>com.technology.jep.jepriashowcase.requestprocess.server.service.RequestProcessServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RequestProcessServlet</servlet-name>
    <url-pattern>/JepRiaShowcase/ProtectedServices/RequestProcessService</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AutoLogonServlet</servlet-name>
    <servlet-class>com.technology.jep.jepria.server.security.tomcat.AutoLogonServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AutoLogonServlet</servlet-name>
    <url-pattern>/autoLogonServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AuthenticationServlet</servlet-name>
    <servlet-class>com.technology.jep.jepriashowcase.custom.server.service.AuthenticationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthenticationServlet</servlet-name>
    <url-pattern>/authenticationServlet</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>Entry.jsp</welcome-file>
  </welcome-file-list>

  <filter>
    <filter-name>SecurityFilter</filter-name>
    <filter-class>com.technology.jep.jepria.server.security.servlet.SecurityFilter</filter-class>
    <init-param>
      <param-name>security-roles</param-name>
      <param-value>
        JrsEditSupplier,
        JrsEditGoods,
        JrsEditShopGoods,
        JrsEditRequest,
        JrsEditRequestProcess,
        JrsEditFeature,
        JrsAssignResponsibleFeature,
        JrsEditAllFeature,
        JrsOperatorFeature
      </param-value>
    </init-param>
    <init-param>
      <param-name>public-resources</param-name>
      <param-value>
        /JepRiaShowcaseCustom.jsp,
        /JepRiaShowcaseSearch.jsp,
        /JepRiaShowcase/*,
        /autoLogonServlet,
        /js/*,
        /css/*,
        /images/*,
        /api/*,
        /api-docs/*,
        /swagger/*
      </param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>
